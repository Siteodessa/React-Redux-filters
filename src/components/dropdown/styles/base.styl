*
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  box-sizing: border-box
  text-rendering: optimizeLegibility

*:focus
  outline: none

html
  font-family: 'Nunito Sans', sans-serif
  font-size: 62.5%

body
  font-size: 1.6rem
  margin: 0
  padding: 0
  -webkit-font-smoothing: antialiased
  -webkit-tap-highlight-color: rgba(0,0,0,0)


ul, li
  margin: 0
  padding: 0
  list-style: none

p
  margin: 0
  padding: 0
